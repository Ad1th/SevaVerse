<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Volunteer Dashboard</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <div class="container mt-5">
      <div class="text-end mb-3">
        <a href="/logout" class="btn btn-danger">Logout</a>
      </div>
      <h1 class="text-center mb-4">Available Tasks</h1>
      <div class="row">
        <% if (tasks.length > 0) { %> <% tasks.forEach(task => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow">
            <div class="card-body">
              <h5 class="card-title"><%= task.title %></h5>
              <p class="card-text">
                <strong>Location:</strong> <%= task.location %><br />
                <strong>From:</strong> <%= new
                Date(task.fromTime).toLocaleString() %><br />
                <strong>To:</strong> <%= new Date(task.toTime).toLocaleString()
                %><br />
                <strong>Size:</strong> <%= task.size %> volunteers<br />
                <strong>Organization:</strong> <%= task.organization.name %>
              </p>
              <a
                href="/volunteer/task/<%= task.id %>"
                class="btn btn-primary w-100"
                >View Details</a
              >
            </div>
          </div>
        </div>
        <% }); %> <% } else { %>
        <p class="text-center">No tasks available at the moment.</p>
        <% } %>
      </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
