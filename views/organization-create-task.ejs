<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css?family=Lora"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Poppins"
      rel="stylesheet"
    />
    <title>Navbar with Sidebar and Search</title>
    <style>
      body {
        margin: 0;
        font-family: Arial, sans-serif;
      }
      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #fb2f2f;
        padding: 20px;
        color: white;
      }
      .menu-btn,
      .profile-btn {
        cursor: pointer;
      }
      .sidebar {
        height: 100%;
        width: 250px;
        position: fixed;
        top: 0;
        left: -250px;
        background-color: #111;
        padding-top: 60px;
        transition: 0.3s;
      }
      .sidebar a {
        padding: 10px 15px;
        display: block;
        color: white;
        text-decoration: none;
      }
      .sidebar a:hover {
        background-color: #575757;
      }
      .close-btn {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 25px;
        cursor: pointer;
        color: white;
      }
      .search-container {
        text-align: center;
        margin: 20px 0;
      }
      .search-bar {
        padding: 10px;
        width: 700px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      .task-list {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 20px;
        padding: 20px;
      }
      .task-list p {
        font-family: "Lora";
      }
      .task-card {
        background: white;
        width: 300px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        text-align: center;
        font-family: "Poppins";
        border-style: solid;
        border-color: #111;
        border-width: 3px;
      }
      .task-header {
        background: #b71c1c;
        color: white;
        padding: 10px;
        font-weight: bold;
      }
      .task-content {
        padding: 15px;
        text-align: left;
      }
      .task-footer {
        background: #b71c1c;
        color: white;
        padding: 10px;
        text-align: center;
        cursor: pointer;
      }
      .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        text-align: center;
      }
      h1 {
        color: red;
        font-size: 36px;
      }
      .form-group {
        margin: 10px 0;
      }
      label {
        display: block;
        font-size: 18px;
        text-align: left;
      }
      input,
      textarea {
        width: 300px;
        padding: 10px;
        border: 2px solid white;
        border-radius: 5px;
        background: transparent;
        color: rgb(109, 57, 57);
        font-size: 16px;
      }
      .btn {
        background: red;
        color: white;
        padding: 15px 30px;
        font-size: 18px;
        border: none;
        cursor: pointer;
        margin-top: 15px;
      }
    </style>
  </head>
  <body>
    <div class="navbar">
      <span
        class="menu-btn"
        onclick="openSidebar()"
        style="font-size: 30px; color: black"
        >â˜°</span
      >
      <img src="/images/full_logo_black.png" width="267" height="61" />
      <img src="/images/profile.png" width="35" height="35" />
    </div>

    <div class="sidebar" id="sidebar">
      <span class="close-btn" onclick="closeSidebar()">&times;</span>
      <a href="/organization/task">Home</a>
      <a href="/organization/task/create">Create Task</a>
      <a href="/logout">Logout</a>
    </div>

    <div class="container">
      <h1>CREATE A NEW TASK!</h1>
      <form action="/organization/task/create" method="POST">
        <div class="form-group">
          <input
            type="text"
            name="title"
            placeholder="Enter the Task Title"
            required
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="location"
            placeholder="Enter the Location"
            required
          />
        </div>
        <div class="form-group">
          <textarea
            name="description"
            rows="3"
            placeholder="Enter the Task Description"
            required
          ></textarea>
        </div>

        <div class="form-group">
          <label for="fromTime">Start Time:</label>
          <input type="datetime-local" id="fromTime" name="fromTime" required />
        </div>

        <div class="form-group">
          <label for="toTime">End Time:</label>
          <input type="datetime-local" id="toTime" name="toTime" required />
        </div>
        <div class="form-group">
          <input
            type="number"
            name="size"
            placeholder="Enter the Number of Volunteers Required"
            min="1"
            required
          />
        </div>
        <button class="btn" type="submit">ADD TASK</button>
      </form>
    </div>

    <script>
      function openSidebar() {
        document.getElementById("sidebar").style.left = "0";
      }
      function closeSidebar() {
        document.getElementById("sidebar").style.left = "-250px";
      }
    </script>
  </body>
</html>
