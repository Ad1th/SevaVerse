<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NGO Information - SevaVerse</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      body {
        background-color: #ffffff;
      }

      .header {
        background-color: #ff3333;
        color: white;
        padding: 15px 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .menu-button {
        background: none;
        border: none;
        font-size: 30px;
        cursor: pointer;
        color: black;
      }

      .logo-container {
        display: flex;
        align-items: center;
      }

      .logo {
        /* width: 40px; */
        height: 40px;
        margin-right: 10px;
      }

      .brand-name {
        font-size: 28px;
        font-weight: bold;
      }

      .profile-button {
        background: none;
        border: none;
        cursor: pointer;
      }

      .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 40px 20px;
      }

      .ngo-logo {
        width: 250px;
        height: 250px;
        border-radius: 50%;
        margin-bottom: 20px;
      }

      .info-section {
        width: 100%;
        max-width: 800px;
        text-align: center;
      }

      .info-title {
        color: #000;
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 20px;
      }

      .form-group {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-bottom: 20px;
      }

      .form-field {
        flex-basis: 48%;
        margin-bottom: 15px;
        text-align: left;
      }

      .form-label {
        display: block;
        font-size: 16px;
        margin-bottom: 5px;
      }

      .form-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }

      .objective-text {
        margin-top: 10px;
        line-height: 1.6;
      }
    </style>
  </head>
  <body>
    <div class="header">
      <button class="menu-button">â‰¡</button>
      <div class="logo-container">
        <img src="/images/logo2.png" alt="SevaVerse Logo" class="logo" />
        <span class="brand-name"></span>
      </div>
      <button class="profile-button">ðŸ”µ</button>
    </div>

    <div class="container">
      <img src="/images/ngoinfo.png" alt="NGO Logo" class="ngo-logo" />

      <div class="info-section">
        <h1 class="info-title">NGO INFORMATION</h1>

        <div class="form-group">
          <div class="form-field">
            <label class="form-label">Organization Name</label>
            <p>
              <%= typeof organization !== 'undefined' ? organization.name :
              'Organization Name' %>
            </p>
          </div>
          <div class="form-field">
            <label class="form-label">Organization ID</label>
            <p>
              <%= typeof organization !== 'undefined' ? organization.id :
              'Organization ID' %>
            </p>
          </div>
        </div>

        <div class="form-group">
          <div class="form-field">
            <label class="form-label">Mobile Number</label>
            <p>
              <%= typeof organization !== 'undefined' ? organization.mobileNo :
              'Mobile Number' %>
            </p>
          </div>
          <div class="form-field">
            <label class="form-label">Email ID</label>
            <p>
              <%= typeof organization !== 'undefined' ? organization.emailId :
              'Email ID' %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <h1 class="info-title">Your Tasks</h1>
      <div class="text-end mb-4">
        <a href="/organization/task/create" class="btn btn-success"
          >Create New Task</a
        >
      </div>
      <div class="task-list">
        <% if (tasks.length > 0) { %> <% tasks.forEach(task => { %>
        <div class="task-item">
          <h3><%= task.title %></h3>
          <p><strong>Description:</strong> <%= task.description %></p>
          <p><strong>Location:</strong> <%= task.location %></p>
          <p>
            <strong>Start Time:</strong> <%= new
            Date(task.fromTime).toLocaleString() %>
          </p>
          <p>
            <strong>End Time:</strong> <%= new
            Date(task.toTime).toLocaleString() %>
          </p>
          <p><strong>Volunteers Needed:</strong> <%= task.size %></p>
          <a href="/organization/task/<%= task.id %>" class="btn btn-primary"
            >View Details</a
          >
        </div>
        <% }); %> <% } else { %>
        <p>No tasks available.</p>
        <% } %>
      </div>
    </div>
  </body>
</html>
